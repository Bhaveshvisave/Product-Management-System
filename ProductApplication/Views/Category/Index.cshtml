@model IEnumerable<ProductApplication.Models.Category>

<h2>Category List</h2>
<a class="btn btn-primary" asp-action="Create">Add Category</a>

<table class="table table-hover mt-3 mb-3 rounded-table table-light text-center">
    <thead class="table-dark">
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                        <form asp-action="Delete" asp-controller="Category" method="post" onsubmit="return confirm('Are you sure?');" style="display:inline;">
                            <input type="hidden" name="id" value="@category.CategoryId" />
                            <button type="submit" class="btn btn-danger ms-3">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No Records Found</td>
            </tr>
        }
    </tbody>
</table>